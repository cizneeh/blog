{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["github>cizneeh/renovate-config:auto.json5"],
  "enabledManagers": ["github-actions", "npm"],
  "packageRules": [
    {
      "matchPackagePatterns": ["^re(mark|hype).*"],
      "matchPackageNames": ["unified"],
      "groupName": "unified"
    },
    {
      "matchPackageNames": [
        "react",
        "@types/react",
        "react-dom",
        "@types/react-dom"
      ],
      "groupName": "react"
    },
    {
      "matchPackageNames": ["@types/node", "node"],
      "description": "nodeはデプロイ先のvercelの対応の問題があるので、dependency dashboardからのみPRを手動で作るようにする",
      "dependencyDashboardApproval": true,
      "automerge": false,
      "groupName": "node"
    },
    {
      "matchPackageNames": ["next"],
      "matchUpdateTypes": ["major"],
      "automerge": false,
      "assignees": ["cizneeh"],
      "groupName": "next"
    },
    {
      "matchUpdateTypes": ["major"],
      "groupName": "major",
      "automerge": false,
      "assignees": ["cizneeh"],
      "assigneesSampleSize": 1
    }
  ],
  "postUpdateOptions": ["pnpmDedupe"]
}
